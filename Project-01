<body>

    <h1 id="title">Assignment - by Mahesh</h1>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        const map = L.map('map').setView([12.9716, 77.5946], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: 'Â© OpenStreetMap'
        }).addTo(map);

        const marker = L.marker([12.9716, 77.5946], { riseOnHover: true }).addTo(map);

        marker.bindPopup(`<b>Hello Sir!</b><br>This is a popup with some information, Thank you for giving this opportunity to show case my skills :).`);

        marker.on('click', function () {
            this.openPopup();
        });
    </script>

